<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ccp.simple.mapper.UserMapper">

    <select id="getAllUsers" resultType="com.ccp.simple.domain.User">
        SELECT
            ID,
            USER_ID,
            USER_PASSWORD,
            USER_NAME,
            CREATE_DT,
            UPDATE_DT,
            ROLE
        FROM USER_INFO
    </select>

    <select id="getUserById" parameterType="String" resultType="com.ccp.simple.domain.User">
        SELECT
            ID
            USER_ID,
            USER_PASSWORD,
            USER_NAME,
            CREATE_DT,
            UPDATE_DT,
            ROLE,
            REFRESH_TOKEN
        FROM USER_INFO
        WHERE USER_ID = #{userId}
    </select>

    <update id="updateUser" parameterType="com.ccp.simple.domain.User">
        UPDATE USER_INFO
        <set>
            <if test="userPassword != null and userPassword != ''">
                USER_PASSWORD = #{userPassword},
            </if>
            <if test="userName != null and userName != ''">
                USER_NAME = #{userName},
            </if>
            UPDATE_DT = CURRENT_TIMESTAMP,
            <if test="refreshToken != null and refreshToken != ''">
                REFRESH_TOKEN = #{refreshToken},
            </if>
        </set>
        WHERE USER_ID = #{userId}
    </update>


    <delete id="deleteUser" parameterType="String">
        DELETE
        FROM USER_INFO
        WHERE USER_ID = #{userId}
    </delete>

    <insert id="insertUser" parameterType="com.ccp.simple.domain.User">
        INSERT INTO USER_INFO (
            ID,
            USER_ID,
            USER_PASSWORD,
            USER_NAME,
            ROLE,
            CREATE_DT
        )
        VALUES (
            #{id},
            #{userId},
            #{userPassword},
            #{userName},
            #{role},
            CURRENT_TIMESTAMP
        )
    </insert>

    <select id="getMaxUserId" resultType="String">
        SELECT MAX(ID) FROM USER_INFO
    </select>
</mapper>
